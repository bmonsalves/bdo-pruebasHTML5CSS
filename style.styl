naranjo = #e44e2d
negro = #1d1d1d

body
	background-color #fff6f1
	font-family 'Helvetica',Arial 
	header
		hgroup
			h1
				color naranjo

		nav
			ul
				li
					display inline-block
					margin-right 20px
					color negro
					cursor pointer
#contenido
	width 960px
	margin 0 auto
	text-align center;


section
	#texto
		width 600px
		height 300px
		background-color negro
		color white
		margin 0 auto
		text-align center
		border-radius 10px
		padding 10px
		box-shadow 0px 0px 20px rgba(0,0,0,0.5)
		
		hgroup
			h1
				color naranjo

		.habilidades
			p
				meter
					margin-left 20px
					width 200px

		form
			label
				display block

			#enviar
				border none
				background-color white
				color naranjo
				border-radius 5px
				padding 4px
				cursor pointer

			#calificacion
				width 200px
				-webkit-appearance none
				background-color white
				heigth 20px
				border-radius 5px
				cursor ponter
				#calificacion::-webkit-slider-thumb
					-webkit-appearance none
					background-color naranjo
		.media
			box-sizing border-box
			.particion
				vertical-align middle
				display inline-block
				width 45%
				margin-right 20px
				audio
					width 230px
					padding 4px
					float right
				video 
					height 180px
				p
					margin 0 0 0 50px





a
	color naranjo
	text-decoration none
	font-weight bold

#micanvas
	position absolute
	bottom 0px
