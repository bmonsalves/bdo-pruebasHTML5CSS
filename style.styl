naranjo = #e44e2d
negro = #1d1d1d

body
	background-color #fff6f1
	font-family 'Helvetica',Arial 
#contenido
	width 960px
	margin 0 auto
	text-align center;
h1
	color naranjo
nav
	ul
		li
			display inline-block
			margin-right 20px
			color negro
			cursor pointer
#texto
	width 600px
	height 300px
	background-color negro
	color white
	margin 0 auto
	text-align center
	border-radius 10px
	padding 10px
	box-shadow 0px 0px 20px rgba(0,0,0,0.5)
a
	color naranjo
	text-decoration none
	font-weight bold